{
  "name": "weather-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @opennextjs/cloudflare",
    "pages:deploy": "npm run pages:build && wrangler pages deploy .open-next/worker --project-name=weather-dashboard",
    "pages:dev": "wrangler pages dev .open-next/worker --compatibility-date=2024-10-01 --compatibility-flag=nodejs_compat"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "framer-motion": "^11.5.4",
    "lucide-react": "^0.390.0"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.3.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wrangler": "^4.38.0"
  }
}
